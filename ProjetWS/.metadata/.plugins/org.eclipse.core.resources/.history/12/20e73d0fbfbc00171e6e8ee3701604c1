	}
	
	public MembreDAO find(int id){
		Membre membre = new Membre();
		try{
			ResultSet result = this.connect.createStatement(
					ResultSet.TYPE_SCROLL_INSENSITIVE,
					ResultSet.CONCUR_READ_ONLY).executeQuery("SELECT * FROM Personne"
							+ "INNER JOIN Membre WHERE ipPers = " + id);
			if(result.first())
				membre = new Membre(id, result.getString("nom"), result.getString("prenom"), cal.getTime(), result.getFloat("cotisation"));
			}
		catch(SQLException e){
			e.printStackTrace();
		}
		return membre;
	}

}
