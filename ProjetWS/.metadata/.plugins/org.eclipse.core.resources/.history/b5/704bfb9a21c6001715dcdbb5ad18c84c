package be.wilson.ClubVeloDAO;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

import be.wilson.ClubVeloPOJO.Balade;
import be.wilson.ClubVeloPOJO.Categorie;
import be.wilson.ClubVeloPOJO.Cyclo;
import be.wilson.ClubVeloPOJO.TypeVTT;
import be.wilson.ClubVeloPOJO.VTT;

public abstract class CategorieDAO extends DAO<Categorie> {
private long generatedId;
	
	public CategorieDAO(Connection conn){
		super(conn);
		generatedId = 0;
	}
	
	public abstract boolean create(Categorie obj);
	
	public abstract boolean delete(Categorie obj);
	
	public abstract boolean update(Categorie obj);
	
	public Categorie find(int id){
		VTTDAO vttDAO = new VTTDAO(connect);
		CycloDAO cycloDAO = new CycloDAO(connect);
		try{
			switch(result.getString("type")){
			case "VTT":
				cat = new VTT(id, result.getInt("nbMembres"), respDAO.find(result.getInt("idPers")), typeVTT);
				break;
			case "Cyclo":
				cat = new Cyclo(id, result.getInt("nbMembres"), respDAO.find(result.getInt("idPers")));
				break;
			
			super.close(result);
		}
		catch(SQLException e){
			e.printStackTrace();
		}
		return cat;
	}
	
	public long getGeneratedId(){
		return generatedId;
	}
}
